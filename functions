INIT_FUNCTIONS=""

function init_register() {
	INIT_FUNCTIONS="${INIT_FUNCTIONS} $@"
}

function init_run() {
	local init
	for init in ${INIT_FUNCTIONS}; do
		${init}
	done
}

# Include version information.
. /usr/lib/network/version

for file in /usr/lib/network/functions.*; do
	. ${file}
done

# Reading in global configuration files
config_read_globals

# Set colour mode
case "${COLOURS}" in
	auto)
		colours_auto_disable
		;;
	off|0)
		colours_disable
		;;
	on|1)
		# Do nothing
		;;
	*)
		warning_log "Unknown parameter given for COLOURS: ${COLOURS}"
		;;
esac

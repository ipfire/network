. /lib/network/functions

# Parse the command line
while [ $# -gt 0 ]; do
	case "${1}" in
		-d|--debug)
			DEBUG=1
			log DEBUG "Enabled debugging mode"
			;;
		*)
			action=${1}
			;;
	esac
	shift
	[ -n "${action}" ] && break
done

# Process the given action
case "${action}" in
	config)
		cli_config $@
		;;

	device)
		cli_device $@
		;;

	zone)
		cli_zone $@
		;;

	start)
		cli_start $@
		;;

	stop)
		cli_stop $@
		;;

	restart)
		cli_stop $@
		cli_start $@
		;;

	show)
		cli_show $@
		;;

	""|help)
		cli_usage root
		exit ${EXIT_OK}
		;;
	*)
		error "Invalid command given."
		cli_usage usage
		exit ${EXIT_CONF_ERROR}
esac

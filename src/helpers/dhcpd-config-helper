. /usr/lib/network/functions

action=${1}
assert isset action

proto=${2}
assert isset proto
assert isoneof proto ${IP_SUPPORTED_PROTOCOLS}

case "${action}" in
	create)
		# Write the configuration file for the given
		# protocol.
		dhcpd_write_config ${proto}
		;;

	*)
		log ERROR "Unknown action passed: ${action}"
		exit ${EXIT_ERROR}
		;;
esac

exit ${EXIT_OK}

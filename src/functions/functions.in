INIT_FUNCTIONS=""

init_register() {
	INIT_FUNCTIONS="${INIT_FUNCTIONS} $@"
}

init_run() {
	local init
	for init in ${INIT_FUNCTIONS}; do
		${init}
	done

	# Also execute all triggers
	triggers_execute_all "init"
}

VERSION="@PACKAGE_VERSION@"
NETWORK_VERSION="${VERSION}"

[ -z "${networkdir}" ] && networkdir="@networkdir@"

# Load entire library
for file in ${networkdir}/functions.*; do
	case "${file}" in
		*.in)
			continue
			;;
		*)
			. ${file}
			;;
	esac
done

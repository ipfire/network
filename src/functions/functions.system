_getconf() {
	getconf $@
}

# Returns the number of online processors
system_get_processors() {
	_getconf _NPROCESSORS_ONLN
}

system_get_next_processor() {
	assert [ $# -eq 1 ]

	local processor=${1}
	local processors=$(system_get_processors)

	# Pick the next one
	print $(( (${processor} + 1) % ${processors} ))
}
